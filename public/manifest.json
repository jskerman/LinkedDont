{
  "manifest_version": 3,
  "name": "LinkedDont",
  "version": "0.0.1",
  "description": "This is intended as a learning exercise. Please don't use this in real life.",
  "permissions": ["activeTab", "storage", "scripting"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
